#include <stdio.h>
int main()
{
    int a=1,b=2,c=0,sum=0;
                  while(c<=4000000)
                  {
                      if(c%2==0)
                 
                        sum+=c;
                        c=a+b;
                        a=b;
                        b=c;
                     
                      
                  }
                    printf("\nsum of even-valued : %d",sum+2);   //+2 because term second was not count in the loop//
            
            return 0;
}
